# Database
# For development (local): SQLite
# DATABASE_URL="file:./dev.db"
# For production (Railway): PostgreSQL
DATABASE_URL="postgresql://user:password@host:port/database?schema=public"

# Server
NODE_ENV=production
PORT=5000

# JWT Authentication
# IMPORTANT: Generate with: openssl rand -base64 64
JWT_SECRET=your-super-secure-jwt-secret-here-change-this
JWT_EXPIRES_IN=7d

# Field Encryption for PII (Aadhaar, Phone, UPI)
# IMPORTANT: Generate with: openssl rand -base64 32
# NEVER share this key or commit it to git!
ENCRYPTION_KEY=your-super-secure-encryption-key-change-this

# Razorpay Payment Gateway
# Get from: https://dashboard.razorpay.com/app/keys
RAZORPAY_KEY_ID=rzp_live_your_key_id
RAZORPAY_KEY_SECRET=your_razorpay_secret
RAZORPAY_WEBHOOK_SECRET=your_webhook_secret

# Agora Video SDK
# Get from: https://console.agora.io/
AGORA_APP_ID=your_agora_app_id
AGORA_APP_CERTIFICATE=your_agora_certificate

# Frontend URL (for CORS)
FRONTEND_URL=https://your-frontend-url.com

# Upload Directory
UPLOAD_DIR=./uploads

# CORS Origins (comma-separated)
CORS_ORIGIN=https://your-frontend-url.com,https://www.your-frontend-url.com
